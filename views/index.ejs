<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header') %>
<body>
<%- include('./partials/navbar')  %>
<div class="blog-content-container">

    <div class="blog-space-container">
        <h1>This is the Blog Space</h1>
        <% if (post.length > 0) { %>
            <% post.forEach(function(postItem) { %>
                <div class="post-container">
                    <h2><%= postItem.title %></h2>
                    <p><%= postItem.content %></p>
                    <a href="/edit/<%= postItem.id %>"><button class="edit">Edit</button></a>
                    <form action="/delete/<%= postItem.id %>" method="post" style="display:inline;">
                        <button class="delete" type="submit">Delete</button>
                    </form>
                </div>
            <% }); %>
        <% } else { %>
            <p>No blog posts found.</p>
        <% } %>
    </div>
    
    
    <div class="form-container">
        <form action="/create" method="post">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" placeholder="Enter title" required>
            
            <label for="content">Content</label>
            <textarea name="content" id="content" placeholder="Enter content" required></textarea>
            
            <input type="submit" value="Submit">
        </form>
    </div>
</div>
<%- include('./partials/footer') %>    
</body>


</html>